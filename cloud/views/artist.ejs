<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Last FM Artist Details</title>

    <!-- Bootstrap -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <link rel="shortcut icon" href="img/favicon.ico" type="image/x-icon">
    <link rel="icon" href="img/favicon.ico" type="image/x-icon">
  
  </head>
  <body>
    <div class="container">
    <nav class="navbar navbar-default" role="navigation">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">LastFM Artist Search</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <form class="navbar-form navbar-left" role="search" onsubmit="return false;" id="artistSearchForm" autocomplete="on">
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Enter artist name" id="artist">
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
          </form>
          <!-- Logout button (start) -->
          <ul class="nav navbar-nav navbar-right">
            <li>
              <a id="loggedInAs"></a>
            </li>
            <li>
              <button type="button" class="btn btn-info navbar-btn" id="logoutBtn">
                <span class="glyphicon glyphicon-log-out"></span> Logout
              </button>
            </li>
          </ul>
          <!-- Logout button (start) -->
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

    <img src="img/loader.gif" id="loader" style="display:none; margin-left: auto;margin-right: auto;">

    <!-- warning message if artist name is blank (start)-->
    <div class="alert alert-warning" role="alert" style="display: none;" id="warnMsg">
    </div>
    <!-- warning message if artist name is blank (end)-->

    <!-- error message if no artist found (start)-->
    <div class="alert alert-danger" role="alert" style="display: none;" id="errMsg">
    </div>
    <!-- error message if no artist found (end)-->

    <!-- Artist Bio (start) -->
    <div class="jumbotron" style="display: none;" id="artistJumboTron">
    </div>
    <!-- Artist Bio (end) -->


    <!-- Band Members (start) -->
    <div class="panel panel-default" id="bandMembersPanel" style="display: none">
      <!-- Default panel contents -->
      <div class="panel-heading">Band Members</div>
      <!-- Table -->
      <table class="table table-hover table-bordered table-striped">
        <thead>
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>Year From</th>
            <th>Year To</th>
          </tr>
        </thead>
        <tbody id="bandMembersTB">
        </tbody>
      </table>
    </div>
    <!-- Band Members (end) -->

    <!-- Top tracks (start) -->    
    <div class="row" id="topTracks" style="display:none">
    </div>
    <!-- Top tracks (end) -->    

    <!-- Similar Artist (start) -->    
    <div class="row" id="similarArtist" style="display:none">
    </div>
    <!-- Similar Artist (end) -->    

    <!-- Tags (start) -->    
    <ul class="pager" id="tag" style="display:none">
    </ul>
    <!-- Tags (end) -->    

    <ul class="nav nav-pills" id="searchHistory" style="display:none">
    </ul>

    <div class="alert alert-info" role="alert" id="historyLoader">
      <strong>Heads up!</strong> Loading search history... <img src="img/loader.gif" style="margin-left: auto;margin-right: auto;">
    </div>

    <div class="alert alert-info" role="alert" id="noHistory" style="display:none">
      <strong>Opps!</strong> No artist search history found.
    </div>

    </div>
    <span id="fb-root"></span>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="http://connect.facebook.net/en_US/all.js#xfbml=1&status=0&appId=698537806905925"></script>
    <script src="http://www.parsecdn.com/js/parse-1.0.19.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script type="text/javascript" src="js/bootstrap.min.js"></script>
    <script type="text/javascript" src="js/lastfm.api.md5.js"></script>
    <script type="text/javascript" src="js/lastfm.api.js"></script>
    <script type="text/javascript" src="js/lastfm.api.cache.js"></script>
    <script type="text/javascript" src="js/operation.js"></script>
    <script type="text/javascript" src="js/fbOperations.js"></script>
    <script type="text/javascript" src="js/parseOperations.js"></script>
  </body>
</html>
